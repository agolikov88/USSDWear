<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.agolikov.wearbalance.ConfigureUssdServiceActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ussd_service_configuration_label"
        android:textStyle="bold"
        android:id="@+id/ussd_service_configure_label"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_accesibility_settings_button_title"
        android:id="@+id/button_open_service_settings"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="openAccessibilitySettings"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="#fff"
        android:background="@drawable/check_ussd_button"/>

</RelativeLayout>
